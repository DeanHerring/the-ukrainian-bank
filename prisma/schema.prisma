// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  status   Boolean @default(false)
  balance  Int     @default(0)
}

model Aviable_Countries {
  id           Int    @id @default(autoincrement())
  country      String
  flag         String
  dialing_code Int
  status       Int    @default(1)
}

model Tariffs {
  id            Int     @id @default(autoincrement())
  title         String
  monthly_limit Int
  daily_limit   Int
  available     Boolean @default(false)
}

model Currencies {
  id    Int    @id @default(autoincrement())
  title String
}

model Cards {
  id             Int     @id @default(autoincrement())
  full_name      String
  type           String
  createdAt      String
  expiration     String
  currency       String
  publisher      String  @default("The Ukrainian Bank")
  balance        Decimal @default(0.00)
  address        String
  pin_code       String
  monthly_limit  Int
  background     String  @default("/src/images/card_backgrounds/default_background.svg")
  daily_limit    Int
  available      Boolean @default(true)
  passport       String
  phone          String
  email          String
  tariff_plan_id Int
  owner_id       Int
}

model Sessions {
  id          Int    @id @default(autoincrement())
  token       String @unique(length: 191) @db.Text
  private_key String
}

model Testing {
  id    Int    @id @default(autoincrement())
  date  String
  money Float  @default(0.00)
}
